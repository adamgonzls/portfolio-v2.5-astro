---
import Base from "../layouts/Base.astro"
import cactusImage from "../assets/images/pinnacle-peak-cactus-800.jpg"
const pageTitle = "404 Page Not Found"
const description = "404 page"
---

<style>
  p {
    font-size: var(--fs-h3);
  }
  .not-found__image {
    /* margin-right: auto; */
    /* margin-left: auto; */
    max-height: 400px;
    border-radius: var(--rounded-corners);
  }
  figure {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  figcaption {
    width: max-content;
    /* align-self: flex-start; */
  }
</style>

<Base pageTitle={pageTitle} description={description}>
  <div class="container--max-width container--base-padding text--center">
    <h1 class="page__title">{pageTitle} - Sorry, that page doesn't exist.</h1>
    <p>Not all who wander are lost, but you are most definitely lost.</p>
    <a class="brand-link brand-link--callout" href="/">Go to home page</a>
    <figure class="mt-1">
      <img
        class="not-found__image"
        src={cactusImage.src}
        alt="A cactus towering over a rocky landscape"
      />
      <figcaption>Pinnacle Peak, Scottsdale, AZ</figcaption>
    </figure>
  </div>
</Base>
