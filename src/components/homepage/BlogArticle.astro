---
import {readableDate} from '../../js/utilities'
const {post} = Astro.props
// console.log(post.frontmatter)
const {title, description, date} = post.frontmatter
---

<style>
  .articleCard {
    margin-bottom: 1em;
    border-radius: 9px;
    padding: 1em;
    background-color: var(--darkness);
  }
  .articleCard__title {
    margin-bottom: .5em;
  }
  .articleCard__date {
    color: var(--off-white);
  }
  .articleCard__description {
    font-size: .9rem;
    margin-bottom: .75em;
  }
  @media screen and (min-width: 550px) {
    .articleCard {
      margin-bottom: unset;
      min-width: 200px;
    }
  }
</style>

<article class="articleCard">
  <h3 class="articleCard__title"><a class="brand-link" href={post.url}>{title}</a></h3>
  <small class="articleCard__date">{readableDate(date)}</small>
  <p class="articleCard__description">{description}</p>
  <a class="brand-link brand-link--callout" href={post.url}>Read More</a>
</article>